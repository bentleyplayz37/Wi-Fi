        <p>Click the button below to gain access to the Wi-Fi...</p>
        
        <!-- Main "Enter" Button -->
        <button class="button" onclick="enableWifi()">Enter</button>

        <!-- Hidden Fun Button Section -->
        <div class="hidden">
            <button class="fun-button" onclick="redirectToGoogle()">Fun Button! Go to Google</button>
        </div>
    </div>

    <script>
        // Simulate enabling Wi-Fi access
        function enableWifi() {
            // Simulate granting access to the Wi-Fi
            alert("You are now connected to the Wi-Fi!");
            
            // Show the hidden fun button after clicking the 'Enter' button
            showFunButton();
        }

        // Function to show the hidden fun button after the 'Enter' button is clicked
        function showFunButton() {
            document.querySelector('.fun-button').style.display = 'block';
        }

        // Redirect to Google when the Fun Button is clicked
        function redirectToGoogle() {
            window.location.href = "https://www.google.com";
        }
    </script>

